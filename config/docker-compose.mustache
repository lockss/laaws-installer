version: '3.7'

#
# MERGE lockss-service-common
#
x-lockss-service-common: &lockss-service-common
  deploy:
#    replicas: 1
    mode: global
    restart_policy:
      condition: on-failure
      delay: 10s
      max_attempts: 5
      window: 120s
    update_config:
      parallelism: 2
      delay: 10s
  stop_grace_period: "${LOCKSS_STOP_GRACE_PERIOD:-60s}"
  logging:
    driver: json-file
    options:
      max-size: 10m
      max-file: 3
#  user: "${LOCKSS_UID}"

#
# SERVICES
#
services:
{{#USE_LOCKSS_CFG}}
  #
  # SERVICE lockss-configuration-service
  #
  lockss-configuration-service:
    <<: *lockss-service-common
    image: {{CFG_IMG}}:{{CFG_VERSION}}
    configs:
      - source: lockss_bootstrap
        target: /run/configs/lockss_bootstrap
      - source: cfg_service
        target: /run/configs/lockss_service
      - source: cfg_service_opt
        target: /run/configs/lockss_service_opt
      - source: lockss_cluster
        target: /run/configs/lockss_cluster
      - source: lockss_cluster_opt
        target: /run/configs/lockss_cluster_opt
    environment:
      - LOCKSS_IS_CONFIG=true
      - "LOCKSS_PROPS_URL={{LOCKSS_PROPS_URL}}"
      - "LOCKSS_WAIT_FOR_PORT={{POSTGRES_HOST}}:{{POSTGRES_DEFAULT_PORT}}"
      - "LOCKSS_PRESERVATION_GROUP=${LOCKSS_PRESERVATION_GROUP}"
      - "ARGS_ADDITIONAL=${ARGS_ADDITIONAL}"
    ports:
      - mode: host
        protocol: tcp
        published: {{CFG_REST_PORT}}
        target: {{CFG_DEFAULT_REST_PORT}}
      - mode: host
        protocol: tcp
        published: {{CFG_UI_PORT}}
        target: {{CFG_DEFAULT_UI_PORT}}
      - mode: host
        protocol: tcp
        published: {{JMS_PORT}}
        target: {{JMS_DEFAULT_PORT}}
      - mode: host
        protocol: tcp
        published: {{LOCKSS_UI_PORT}}
        target: {{CFG_DEFAULT_UI_PORT}}
    volumes:
      - lockss-cfg-data:/data
      - lockss-cfg-logs:/var/log/lockss
    secrets:
      - lockss-postgres-pass
      - lockss_ui_pass
      - lockss-auth
    networks:
      - host-network
{{/USE_LOCKSS_CFG}}

