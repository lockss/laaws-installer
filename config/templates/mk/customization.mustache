# kustomization.yaml
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

# list of Resource Config to be Applied
resources:
- lockss-configuration-service.yaml
- lockss-metadata-service.yaml
- lockss-poller-service.yaml
- lockss-postgres-service.yaml
- lockss-pywb-service.yaml
- lockss-repository-service.yaml
- lockss-solr-service.yaml

# namespace to deploy all Resources to
namespace: lockss

# labels added to all Resources
commonLabels:
app: lockss
lockss-stack-id: {{STACK}}
