apiVersion: v1
kind: Service
metadata:
  labels:
    io.kompose.service: lockss-solr-service
  name: lockss-solr-service
spec:
  ports:
  - name: "lockss-solr-port"
    port: {{SOLR_PORT}}
    targetPort: {{SOLR_DEFAULT_PORT}}
  selector:
    io.kompose.service: lockss-solr-service
  externalTrafficPolicy: Local
  type: NodePort
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  labels:
    io.kompose.service: lockss-solr-service
  name: lockss-solr-data-pvc
spec:
  accessModes:
  - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: 100Mi
  storageClassName: local-storage
  selector:
    matchLabels:
      usage: "lockss-solr-data"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  labels:
    io.kompose.service: lockss-solr-service
  name: lockss-solr-logs-pvc
spec:
  accessModes:
  - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: 100Mi
  storageClassName: local-storage
  selector:
    matchLabels:
      usage: "lockss-solr-logs"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    io.kompose.service: lockss-solr-service
  name: lockss-solr-service
spec:
  replicas: 1
  selector:
    matchLabels:
      io.kompose.service: lockss-solr-service
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        io.kompose.network/lockss-stack-network: "true"
        io.kompose.service: lockss-solr-service
    spec:
      containers:
      - command: [{{SOLR_CMD}}]
        args: [{{SOLR_CORE_REPO}}}, {{SOLR_CONFIGSET}}]
        env:
        - name: TZ
          value: {{LOCKSS_TIMEZONE}}
        image: {{SOLR_IMG}}:{{SOLR_VERSION}}
        name: lockss-solr-service
        ports:
        - containerPort: {{SOLR_DEFAULT_PORT}}
        resources: {}
        volumeMounts:
        - mountPath: /run/secrets/lockss-auth
          name: lockss-auth
        - mountPath: /opt/solr/server/solr
          name: lockss-solr-data
        - mountPath: /opt/solr/server/logs
          name: lockss-solr-logs
      restartPolicy: Always
      volumes:
      - name: lockss-auth
        secret:
          items:
          - key: lockss-auth
            path: lockss-auth
          secretName: lockss-auth
      - name: lockss-solr-data
        persistentVolumeClaim:
          claimName: lockss-solr-data-pvc
      - name: lockss-solr-logs
        persistentVolumeClaim:
          claimName: lockss-solr-logs-pvc
status: {}
