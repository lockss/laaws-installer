apiVersion: v1
kind: PersistentVolume
metadata:
  name: lockss-cfg-data-pv
  labels:
    type: hostPath
    app: lockss
    owner: lockss-cfg-data
spec:
  capacity:
    storage: 5Gi
  volumeMode: Filesystem
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: local-storage
  local:
    path: {{LOCKSS_DATA_DIR}}/{{STACK}}-cfg-data
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - minikube
---
